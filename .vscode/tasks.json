{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "jekyll",
            "type": "shell",
            "command": "PATH=\"$HOME/.gem/bin:$PATH\" GEM_HOME=\"$HOME/gems\" bundle exec jekyll serve --trace --incremental",
            "isBackground": true,
            "problemMatcher":
            {
              "pattern": [
                {
                  "regexp": ".",
                  "file": 1,
                  "location": 2,
                  "message": 3
                }
              ],
              "background": {
                "activeOnStart": true,
                "beginsPattern": ".",
                "endsPattern": ".",
              }
            }
        }
    ]
}